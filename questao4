#include <stdio.h>

int main()
{
    int valor;
    int *p1;
    float temp;
    float *p2;
    char aux;
    char *nome = "Ponteiros";
    char *p3;
    int idade;
    int vetor[3];
    int *p4;
    int *p5;


    valor = 10;
    p1 = &valor;
    *p1 = 20;
    // A saída será 20
    printf("%d \n", valor);
    

    temp = 26.5;
    p2 = &temp;
    *p2 = 29.0;
    // A saída será 29
    printf("%.1f \n", temp);


    p3 = &nome[0];
    aux = *p3;
    // A saída será p
    printf("%c \n", aux);


    p3 = &nome[4];
    aux = *p3;
    // A saída será e
    printf("%c \n", aux);


    p3 = p3 + 4;
    //A saída será "s"
    printf("%c \n", *p3);


  vetor[0] = 31;
  vetor[1] = 45;
  vetor[2] = 27;
  p4 = vetor;
  idade = *p4;
  // A saída será o valor do primeiro elemento do array: 31
  printf("%d \n", idade);

  

    p5 = p4 + 1; // passou para o endereço seguinte
    idade = *p5;
    // A saída será 45
    printf("%d \n", idade);



    p4 = p5 +1; // passou para o endereço seguinte
    idade = *p4;
    // A saída será 27
    printf("%d \n", idade);



    p4 = p4 - 2; // voltou dois endereços
    idade = *p4;
    // A saída será 31
    printf("%d \n", idade);


    p5 = &vetor[2] - 1;
    // A saída será 45
    printf("%d \n", *p5);


    p5++;
    // A saída será 27
    printf("%d \n", *p5);
    

// TODOS CORRESPONDERAM COM A EXPECTATIVA DE RESPOSTA
    return 0;
}
