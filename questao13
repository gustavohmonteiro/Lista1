#include <stdio.h>
#include<stdlib.h>

int main(void){

    int tam, aux, j, i;

    printf("Informe o tamanho do array: ");
    scanf("%d",&tam);

    float *p = (float*) malloc(tam*sizeof(float));


    for(j=0;j<tam;j++){
        printf("Informe um numero: ");
        scanf("%f",&p[j]);
    }

    for(i=0; i<tam; i++){
        for (int j=i+1;j<tam;j++){
            if(p[i]>p[j]){
            aux =p[i];
            p[i]= p[j];
            p[j]=aux;
            }
        }
    }

    for(j=0;j<tam;j++){
        if(j==tam-1){
        printf("%.2f ",p[j]);
        }
        else  {
            printf("%.2f, ",p[j]);
        }
    }

    free(p);

return 0;

}
